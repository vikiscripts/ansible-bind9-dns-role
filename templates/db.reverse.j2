$TTL 604800	; 1 week
@	IN SOA	{{ ansible_fqdn }}. admin.{{ domain }}. (
				7          ; serial
				604800     ; refresh (1 week)
				86400      ; retry (1 day)
				2419200    ; expire (4 weeks)
				604800     ; minimum (1 week)
				)
; name servers - NS records
     IN      NS      {{ hostvars[groups['ns1'][0]]['host_name'] }}.
     IN      NS      {{ hostvars[groups['ns2'][0]]['host_name'] }}.

$ORIGIN {{ rev_domain }}.
$TTL 604800	; 1 week
61    IN   PTR   ns1.10.10.10.in-addr.arpa.
62    IN   PTR   ns2.10.10.10.in-addr.arpa.
60    IN   PTR   control.10.10.10.in-addr.arpa.
